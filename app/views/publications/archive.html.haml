%div#full_calendar
  %h2#month
    = link_to "<", date: @date.prev_month
    = "#{month(@date)} #{@date.strftime('%Y')}"
    = link_to ">", date: @date.next_month
  = calendar(@date) do |date|
    = date.day
    - if @news_by_date[date]
      %ul
        - @news_by_date[date].each do |publication|
          %li= link_to truncate(publication.title, length: 17), publication, title: publication.title