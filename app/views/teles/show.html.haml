- title "Справедливая кубань: #{@tele.title}"
- meta_description "#{@tele.intro}"

.single_page
  .post_area
    %h1= @tele.title 
    = render :partial => "layouts/editcont", :locals => {:content => @tele}
    -if @tele.youtube    
      %div= @tele.youtube.html_safe
    %div.text_body= @tele.body.html_safe
    = render :partial => "layouts/social"
  = render :partial => "comments/output", :locals => {:commentable => @tele}





